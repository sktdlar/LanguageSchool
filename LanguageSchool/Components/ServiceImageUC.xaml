<UserControl x:Class="LanguageSchool.Components.ServiceImageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LanguageSchool.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="150">
    <Grid>
        <StackPanel>
            <Image Height="80"  Width="80" Margin="10" VerticalAlignment="Top" Name="ServiceImg"></Image>
            <Button Name="DelBtn" Margin="10" Click="DelBtn_Click">
                <StackPanel>
                    <TextBlock FontSize="12">Удалить фото</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="SelectAsMain" Margin="10" Click="SelectAsMain_Click">
                <StackPanel>
                    <TextBlock FontSize="12">Выбрать основным</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        
    </Grid>
</UserControl>
